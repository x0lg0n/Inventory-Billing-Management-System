# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation for JSON, JavaScript, TypeScript, YAML
[*.{json,js,jsx,ts,tsx,yml,yaml}]
indent_style = space
indent_size = 2

# 4 space indentation for Python (if used in the project)
[*.py]
indent_style = space
indent_size = 4

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# 2 space indentation for Markdown
[*.md]
indent_style = space
indent_size = 2